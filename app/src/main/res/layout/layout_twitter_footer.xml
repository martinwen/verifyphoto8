<?xml version="1.0" encoding="utf-8"?>
<com.shcy.yyzzj.view.view.recycleview.view.Footer
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/all"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/pb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:indeterminate="false"
            style="@android:style/Widget.ProgressBar.Small.Inverse"
            android:indeterminateDrawable="@drawable/loading_img"
            android:visibility="gone"
            android:layout_alignBottom="@+id/arrow"
            android:layout_alignRight="@+id/arrow"
            android:layout_alignEnd="@+id/arrow"/>

        <TextView
            android:id="@+id/tv_loadmore"
            android:text="加载更多"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    </RelativeLayout>
</com.shcy.yyzzj.view.view.recycleview.view.Footer>