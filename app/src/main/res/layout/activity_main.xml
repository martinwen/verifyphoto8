<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/activity_image_back"
    >
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:text="证件照相机"
        android:background="#FCB8DF"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-17dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/image_center"
            android:scaleType="center"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        >

        <RelativeLayout
            android:id="@+id/takepictrue_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainpage_layout_back"
            android:paddingLeft="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/camera_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/camera"
                android:layout_marginLeft="18dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="拍照"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E9597"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:text="海量尺寸任你选"
                    />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/album_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainpage_layout_back"
            android:paddingLeft="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/album" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/album"
                android:layout_marginLeft="18dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="相册"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E9597"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:text="拍摄保存的证件照"
                    />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mine_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mainpage_layout_back"
            android:paddingLeft="18dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mine_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/mine"
                android:layout_marginLeft="18dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:text="我的"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9E9597"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:text="在这里查看订单"
                    />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>