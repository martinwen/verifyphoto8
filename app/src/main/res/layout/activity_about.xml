<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_back_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/about_back"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:scaleType="center"
        android:src="@mipmap/album_back" />

    <TextView
        android:id="@+id/order_detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="关于我们"
        android:textColor="@color/white"
        android:textSize="31sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/about_camera" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        ></View>

    <TextView
        android:id="@+id/about_agreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="《服务协议及版权声明》"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="3"
        ></View>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Copyright@2016-2018"
        android:textColor="#656F96"
        android:textSize="15sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:text="尔湾生活 版权所有"
        android:textColor="#656F96"
        android:textSize="15sp" />

</LinearLayout>
