<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F9"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCB8DF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:scaleType="center"
            android:src="@mipmap/white_back" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号快速登录"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="+86"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/login_phone_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/black"
                android:textColorHint="@color/login_hint" />

            <ImageView
                android:id="@+id/login_phone_delete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="center"
                android:src="@mipmap/login_delete_phonenum"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/login_hint"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册／登录表示同意"
                android:textColor="@color/login_hint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/login_user_argreenment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="证件照相机用户协议"
                android:textColor="#FA75C4"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/login_nextbtn"
            style="@style/bigbutton_style"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:text="下一步" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_verify_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码已发送至"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/login_verify_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="+86"
            android:textColor="@color/login_hint"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/login_verify_code1"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/login_hint"></View>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/login_verify_code2"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/login_hint"></View>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/login_verify_code3"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/login_hint"></View>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></View>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/login_verify_code4"
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/login_hint"></View>
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/login_verifycode_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:cursorVisible="false"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@color/transparent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/login_verify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/login_hint"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>