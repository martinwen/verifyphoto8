<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#88000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/paydialog_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            android:scaleType="center"
            android:src="@mipmap/paydialog_close_icon" />

        <LinearLayout
            android:id="@+id/paydialog_alipay_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:paddingTop="10dp"
            android:paddingRight="35dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/submit_alipay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="支付宝支付"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <ImageView
                android:id="@+id/paydialog_alipay_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/submit_paychoice" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paydialog_wechat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:paddingTop="10dp"
            android:paddingRight="35dp"
            android:paddingBottom="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/submit_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="微信支付"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"></View>

            <ImageView
                android:id="@+id/paydialog_wechat_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/submit_pay_unchoice" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paydialog_deadline_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/paydialog_deadline_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#AF3234"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/deadline_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="后关闭此订单"
                android:textColor="#AF3234"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/paydialog_pay_button"
            style="@style/bigbutton_style"
            android:layout_marginTop="10dp"
            android:text="确认支付" />
    </LinearLayout>
</LinearLayout>